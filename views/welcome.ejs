<%- include("partials/header") -%>

<h1 style="text-align="center">Welcome to your shop <%=farmer%></h1>
<a class="btn btn-dark btn-lg" href="/createShop" role="button">Create your Shop</a>
<a class="btn btn-dark btn-lg" href="/logout" role="button" > Log Out </a>

<div class="">


<form action="/saveFarmerItemList" method="POST" onsubmit="return validateItem()">
  <input type="text" id="data" name="data" value="">
  <input type="text" id="farmerName" name="farmerName" value="<%=farmer%>">
 <p><%=listExist %></p>


 <%if (listExist) { %>
 <p>hitesh gupta</p>
 <% } %>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Item Name</th>
                <th scope="col">Price</th>
                <th scope="col">Min Quantity</th>

            </tr>
            <tbody id="tBodyItemList">
              <%if (!listExist) { %>
              <% itemList.forEach( (item, index) => { %>
                 <tr id=<%=  item._id %>>
                      <td scope="row"><%= index+1 %></td>

                      <td><input type="text" class="form-control" name="itemName" value="<%= item.name  %>"  readonly/></td>

                      <td><input type="number"       class="form-control" name="price" value="0" /></td>

                      <td><input type="number" class="form-control" name="minQuantity"   value="0" /></td>

                  </tr>
              <% }) %>

              <% } else {%>


                <% itemList.forEach( (item, index) => { %>
                   <tr id=<%=  item.itemId %>>
                        <td scope="row"><%= index+1 %></td>

                        <td><input type="text" class="form-control" name="itemName" value="<%= item.itemName  %>"  readonly/></td>

                        <td><input type="number"       class="form-control" name="price" value="<%= item.price  %>" /></td>

                        <td><input type="number" class="form-control" name="minQuantity"   value="<%= item.minQty  %>" /></td>

                    </tr>
                <% }) %>


                <% } %>
            </tbody>

        </thead>
    </table>
    <button id="btn"  class="btn btn-dark">Submit</button>
</form>
</div>



  <%- include("partials/footer") -%>
